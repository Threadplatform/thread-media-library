<%= render 'shared/header', type: 'videos' %>

<table>
  <thead>
    <tr>
      <th><%= link_to "Name", request.query_parameters.merge(order: "name") %></th>
      <th><%= link_to "Source", request.query_parameters.merge(order: "source") %></th>
      <th colspan="3"></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @videos.each do |video| %>
      <tr>
        <td><%= link_to video.name, video %></td>
        <td><%= video.source %></td>
        <td><%= link_to 'Watch', video.link, target: "_blank" %></td>
        <td><%= link_to 'Reviews', video_path(video) %></td>
        <td><%= link_to 'Edit', edit_video_path(video) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Video', new_video_path %>
