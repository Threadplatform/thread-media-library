<p id="notice"><%= notice %></p>

  <h1>Books</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Author</th>
        <th>User</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.name %></td>
          <td><%= book.author %></td>
          <td><%= if book.user then book.user.name else link_to "Check out", book_path(book, book: {user_id: current_user.id}), method: :put end %></td>
          <td><%= link_to 'Show', book %></td>
          <td><%= link_to 'Edit', edit_book_path(book) %></td>
          <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <%= link_to 'New Book', new_book_path %>
